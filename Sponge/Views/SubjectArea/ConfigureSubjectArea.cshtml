@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("SaveMastersGroup", "SubjectArea", FormMethod.Post))
{
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Configure Subject Area</p>
                <div class="forms-sample">
                    <div class="form-group row ">
                        <div class="col">
                            <label for="country">Country</label>
                            <select class="form-control" id="country">
                                <option selected>Select</option>
                                <option value="1">India</option>
                             
                            </select>
                        </div>
                        <div class="col">
                            <label for="subjectAreaName">Subject Area Name</label>
                            <select class="form-control" id="subjectAreaName">
                                <option selected>Select</option>
                                <option >Primary Sales Business Plan- Brand</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col ">
                            <label for="version">Selected Masters Group</label>
                            <div class="form-check-row">
                              
                                <div class="form-check form-check-flat form-check-primary">
                                    <label class="form-check-label">
                                       Business Organization<input type="checkbox"
                                                        class="form-check-input" id="=version">
                                    </label>
                                </div>
                               
                                <div class="form-check form-check-flat form-check-primary">
                                    <label class="form-check-label">
                                       Customer <input type="checkbox"
                                                               class="form-check-input" id="=version">
                                    </label>

                                </div>
                                <div class="form-check form-check-flat form-check-primary">
                                    <label class="form-check-label">
                                        Geography<input type="checkbox"
                                                        class="form-check-input" id="=version">
                                    </label>
                                </div>
                                <div class="form-check form-check-flat form-check-primary">
                                    <label class="form-check-label">
                                        Others <input type="checkbox"
                                                       class="form-check-input" id="=version">
                                    </label>
                                </div>
                                <div class="form-check form-check-flat form-check-primary">
                                    <label class="form-check-label">
                                        Outlet Segmentation <input type="checkbox"
                                                      class="form-check-input" id="=version">
                                    </label>
                                </div>
                                <div class="form-check form-check-flat form-check-primary">
                                    <label class="form-check-label">
                                        Product <input type="checkbox"
                                                                   class="form-check-input" id="=version">
                                    </label>
                                </div>
                                <div class="form-check form-check-flat form-check-primary">
                                    <label class="form-check-label">
                                        Sales organization <input type="checkbox"
                                                       class="form-check-input" id="=version">
                                    </label>
                                </div>
                             

                                                       </div>
                        </div>
                    </div>
                    <button class="btn btn-light mr-2">Cancel</button>
                    <button type="submit" class="btn btn-primary ">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>

}