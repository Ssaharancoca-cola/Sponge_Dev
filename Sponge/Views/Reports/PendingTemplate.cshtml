@model IEnumerable<Sponge.ViewModel.PendingTemplateReport>
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 stretch-card grid-margin">
        <div class="card">
            <div class="card-body">
                <p class="card-title">
                    Pending Templates                    
                </p>
                <div class="table-responsive">
                    <table id="example" class="display expandable-table" style="width:100%">
                        <thead>
                            <tr>
                                <th>SubFunction Name</th>
                                <th>Lock Date</th>
                                <th>File Name</th>
                                <th>Pending By</th>
                                <th>Download</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SUBFUNCTION_NAME</td>
                                    <td>@item.LOCK_DATE</td>
                                    <td title="@item.FILE_NAME">@item.TRIMMED_FILE_NAME</td>
                                    <td>@item.PENDING_BY</td>
                                    <td>
                                        <button id="downloadFileBTN" data-config-id="@item.CONFIG_ID" data-file-code="@item.FILE_CODE">Download</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Plugin js for this page -->
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="~/assists/js/hoverable-collapse.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
    new DataTable('#example', {
        order: [[2, 'desc']]
    });

    //Initialize the Multiselect Dropdown:
    const chBoxes = document.querySelectorAll('.dropdown-menu input[type="checkbox"]');
    const dpBtn = document.getElementById('multiSelectDropdown');
    let mySelectedListItems = [];

    function handleCB() {
        mySelectedListItems = [];
        let mySelectedListItemsText = '';

        chBoxes.forEach((checkbox) => {
            if (checkbox.checked) {
                mySelectedListItems.push(checkbox.value);
                mySelectedListItemsText += checkbox.value + ', ';
            }
        });

        dpBtn.innerText =
            mySelectedListItems.length > 0
                ? mySelectedListItemsText.slice(0, -2) : 'Select';
    }

    chBoxes.forEach((checkbox) => {
        checkbox.addEventListener('change', handleCB);
    });


    $(document).ready(function () {
        $(document).on('click', '#downloadFileBTN', function () {

            var configId = $(this).data("config-id");
            var fileCode = $(this).data("file-code");
            $.ajax({
                url: '/Reports/Download',
                method: 'POST',
                dataType: 'json', 
                data: {
                    CONFIG_ID: configId,
                    FILE_CODE: fileCode
                },
                success: function (response) {
                    // Handle the successful response
                },
                error: function (xhr, status, error) {
                    // Handle errors
                }
            });
        });
    });
</script>
<!-- End plugin js for this page -->