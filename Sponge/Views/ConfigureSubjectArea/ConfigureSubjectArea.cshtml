@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="ConfigureSubjectAreaform">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-title">Configure Subject Area</p>
                    <div class="forms-sample">
                        <div class="form-group row">

                            <div class="col">
                                <label for="subjectAreaName">Subject Area Name</label>
                                <select class="form-control" name="SubjectArea">
                                    <option selected>Select</option>
                                    @foreach (var f in ViewBag.SubjectArea)
                                    {
                                        <option value="@f.Text">@f.Value</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col ">
                                <label for="version">Selected Masters Group</label>
                                <div class="form-check-row">
                                    @foreach (var Dimension in ViewBag.lstDimensions)
                                    {
                                        <div class="form-check form-check-flat form-check-primary">
                                            <label class="form-check-label">
                                                @Dimension.Text
                                                <input type="checkbox"
                                                       class="form-check-input" value="@Dimension.Text" name="Dimension">
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-light mr-2">Cancel</button>
                        <button type="submit" id="btnSave" class="btn btn-primary ">Next</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="~/assists/js/hoverable-collapse.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        debugger;
        $("#btnSave").click(function (event) {
            debugger;
            event.preventDefault();
            var form = $('#ConfigureSubjectAreaform').serialize();
            $.ajax({
                url: '@Url.Action("SaveMastersGroup", "ConfigureSubjectArea")',
                data: form,
                type: 'POST',
                success: function (data) {
                    debugger;
                    onSuccess(data);
                },
                error: function (error) {
                    console.log('Error: ', error);
                }
            });
        });
    });
</script>